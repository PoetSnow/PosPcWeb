                        //$(".k-i-close").click(function () {
                        //    closeGeneralWindow();
                        //});
                        //openGeneralWindow();
                        layer.close(layer.index);
                        layer.open({
                            type: 1,
                            title: "更换班次",
                            skin: 'layui-layer-demo', //样式类名
                            closeBtn: 0, //不显示关闭按钮
                            shadeClose: true, //开启遮罩关闭
                            area: ['auto', 'auto'], //宽高
                            content: data
