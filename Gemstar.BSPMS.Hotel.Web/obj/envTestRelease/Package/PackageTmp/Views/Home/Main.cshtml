<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@Html.Partial("_SystemNameInTitle")</title>
    @Html.Partial("_HeaderCss")
    @Html.Partial("_HeaderJs")
    
