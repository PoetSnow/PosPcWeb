            <td>@Html.ValidationMessageFor(m => m.isTabeachbreak, "*")</td>
            <td class="textright">@Html.LabelFor(m => m.isVirtual)</td>
            <td>@Html.Kendo().CheckBoxFor(m => m.isVirtual).HtmlAttributes(new { style = "width:100%;" })</td>
            <td>@Html.ValidationMessageFor(m => m.isVirtual, "*")</td>
        </tr>
        <tr>
