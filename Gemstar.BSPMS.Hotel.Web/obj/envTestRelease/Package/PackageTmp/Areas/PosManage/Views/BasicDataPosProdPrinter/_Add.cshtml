            <td class="textright">@Html.LabelFor(m => m.Comno1)</td>
            <td>@Html.Kendo().DropDownListFor(e => e.Comno1).HtmlAttributes(new { style = " width:100%" }).DataTextField("Text").DataValueField("Value").DataSource(e => { e.Read(r => r.Action("ListItemsForPosComno", "BasicDataPosPos", new { rnd = new Random().NextDouble() })); }).OptionLabel("请选择备份串口号")</td>
            <td>@Html.ValidationMessageFor(m => m.Comno1, "*")</td>
        </tr>
        <tr>
