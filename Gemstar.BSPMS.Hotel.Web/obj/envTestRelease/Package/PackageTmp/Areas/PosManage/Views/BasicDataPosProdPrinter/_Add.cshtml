@using Gemstar.BSPMS.Hotel.Services.EnumsPos;
@model Gemstar.BSPMS.Hotel.Web.Areas.PosManage.Models.BasicDataPosProdPrinter.ProdPrinterAddViewModel

<script type="text/javascript">
    function itemChange() {
        var section = $("#Section").data("kendoDropDownList").value();
        var comno = $("#Comno").data("kendoDropDownList").value();

        $("#Code").removeAttr("readonly");
        $("#Code").val(section + comno);
        $("#Code").attr("readonly", "readonly");
    }
</script>

@using (Html.BeginForm())
{
    <table class="editFormTable">
        <tr>
            <td class="textright">@Html.LabelFor(m => m.Code)</td>
            <td>@Html.Kendo().TextBoxFor(m => m.Code).HtmlAttributes(new { style = "width:100%;", @readonly = "readonly", placeholder = "请输入代码"})</td>
            <td>@Html.ValidationMessageFor(m => m.Code, "*")</td>
            <td class="textright">@Html.LabelFor(m => m.Cname)</td>
            <td>@Html.Kendo().TextBoxFor(m => m.Cname).HtmlAttributes(new { style = "width:100%;", placeholder = "请输入中文名称" })</td>
            <td>@Html.ValidationMessageFor(m => m.Cname, "*")</td>
        </tr>
        <tr>
            <td class="textright">@Html.LabelFor(m => m.Ename)</td>
            <td>@Html.Kendo().TextBoxFor(m => m.Ename).HtmlAttributes(new { style = "width:100%;" })</td>
            <td>@Html.ValidationMessageFor(m => m.Ename, "*")</td>
            <td class="textright">@Html.LabelFor(m => m.Seqid)</td>
            <td>@Html.Kendo().IntegerTextBoxFor(m => m.Seqid).HtmlAttributes(new { style = "width:100%;" })</td>
            <td>@Html.ValidationMessageFor(m => m.Seqid, "*")</td>
        </tr>
        <tr>
            <td class="textright">@Html.LabelFor(m => m.Section)</td>
            <td>@Html.Kendo().DropDownListFor(m => m.Section).BindTo(Enum.GetNames(typeof(PosSection))).HtmlAttributes(new { style = "width:100%;"}).OptionLabel("请选择分区号").Events(e => e.Change("itemChange"))</td>
            <td>@Html.ValidationMessageFor(m => m.Section, "*")</td>
            <td class="textright">@Html.LabelFor(m => m.Comno)</td>
            <td>@Html.Kendo().DropDownListFor(e => e.Comno).HtmlAttributes(new { style = " width:100%" }).DataTextField("Text").DataValueField("Value").DataSource(e => { e.Read(r => r.Action("ListItemsForPosComno", "BasicDataPosPos", new { rnd = new Random().NextDouble() })); }).OptionLabel("请选择串口号").Events(e => e.Change("itemChange"))</td>
            <td>@Html.ValidationMessageFor(m => m.Comno, "*")</td>
        </tr>
        <tr>
            <td class="textright">@Html.LabelFor(m => m.Section1)</td>
            <td>@Html.Kendo().DropDownListFor(m => m.Section1).BindTo(Enum.GetNames(typeof(PosSection))).HtmlAttributes(new { style = "width:100%;"}).OptionLabel("请选择备份分区号")</td>
