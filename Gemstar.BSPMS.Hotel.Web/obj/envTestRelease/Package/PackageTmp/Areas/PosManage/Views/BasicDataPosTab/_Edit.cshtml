@model Gemstar.BSPMS.Hotel.Web.Areas.PosManage.Models.BasicDataPosTab.TabEditViewModel

<script type="text/javascript">
    function moduleChanged() {
        var TabTypeid = $("#TabTypeid").data("kendoDropDownList");
        TabTypeid.dataSource.read();

        var RefeName = $("#Refeid").data("kendoDropDownList");
        RefeName.dataSource.read();
    }

    function posCode_paras() {
        var module = $("#Module").data("kendoDropDownList");
        var moduleCode = module.value();
        return {
            moduleCode: moduleCode
        };
    }
    function TabTypeChanged()
    {
        var TabType = $("#TabTypeid").data("kendoDropDownList");
        var TabTypeId = TabType.value();
        $.ajax({
                url: '@Url.Action("GetPosTabType", "BasicDataPosTab")',
                type: "post",
                data: { TabTypeId: TabTypeId },
                dataType: "json",
                success: function (data) {
                    if (data.Success) {                       
                        $("#TabTypeCode").val(data.Data.TabTypeCode);
                        $("#TabTypeName").val(data.Data.TabTypeName);
                        $("#MaxSeat").val(data.Data.MaxSeat);
                    }
                },
                error: function (data) {
                    layer.alert(data.responseText, { title: "快点云Pos提示" });
                }
            });
    }
</script>

