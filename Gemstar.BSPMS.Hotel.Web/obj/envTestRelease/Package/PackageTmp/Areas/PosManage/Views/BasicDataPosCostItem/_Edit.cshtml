    function addGridItemOther(url, id, title) {
        $.ajax({
            url: url + "?id=" + id,
            type: "get",
            dataType: "html",
            success: function (result) {
                $("#posMaskWindow").html(result);
                $("#posMaskWindow_wnd_title").text(title);
                $(".k-i-close").click(function () {
                    closeGeneralWindow();
                });
                openGeneralWindow();

            },
            error: function (result) {
                alert(result.responseText);
            }
        });
    }
    function hideItemOther(divid) {
        $("#" + divid).hide();
    }
    //批量 删除
    function batchDelete(gridId, keyName, url) {

        var grid = $("#" + gridId).data("kendoGrid");
        var selectedRows = grid.select();
        if (selectedRows.length == 0) {
            jAlert("请选择要删除的数据行");
        } else {
            jConfirm("确认要删除所有选中的数据行?", "确认", "取消", function (confirmed) {
                if (confirmed) {
                    var ids = [];
                    for (var i = 0; i < selectedRows.length; i++) {
                        var row = selectedRows[i];
                        var data = grid.dataItem(row);
                        ids.push(data[keyName]);
                    }
                    $.post(url, { id: ids.join(",") }, function (data) {
                        if (data.Success) {
                            grid.dataSource.read();
                        } else {
                            //layer.alert(data.Data);
                            ajaxErrorHandle(data);
                        }
                    }, 'json');
                }
            });
        }
    }

    //编辑
    function editGridItemOther(gridId, keyName, url, title) {
        var grid = $("#" + gridId).data("kendoGrid");
        var selectedRows = grid.select();
        if (selectedRows.length == 0) {
            jAlert("请选择要修改的数据行");
        } else if (selectedRows.length == 1) {
            var row = selectedRows[0];
            var data = grid.dataItem(row);

            $.ajax({
                url: url + "?id=" + data[keyName],
                type: "get",
                dataType: "html",
                success: function (result) {
                    $("#posMaskWindow").html(result);
                    $("#posMaskWindow_wnd_title").text(title);
                    $(".k-i-close").click(function () {
                        $("#posMaskWindow").html("");
                        closeGeneralWindow();
                    });
                    openGeneralWindow();
                },
                error: function (result) {
                    alert(result.responseText);
                }
            });

        }
        else {
            jAlert("请选择一行数据行");
        }
    }
    function saveFormDataForPosItem(btn, grid) {
        var f = $(btn)[0].form;
        var validator = $(f).validate();
        if (validator.form()) {
            $.post(
                $(f).attr("action"),
                $(f).serialize(),
                function (data) {
                    if (data.Success) {
                        $("#" + grid).data("kendoGrid").dataSource.read();
                        $("#" + grid).data("kendoGrid").refresh();
                        $("#posMaskWindow").html("");
                        closeGeneralWindow();
                    } else {
                        jAlert(data.Data);
                    }
                },
                "json");
        }
    }
</script>