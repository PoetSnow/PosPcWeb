                    alert(data.Data);
                   // layer.alert(data.Data, { title: "快点云Pos提示" });
                }
            },
            error: function (result) {
                //alert(result.responseText);
                layer.alert(result.responseText, { title: "快点云Pos提示" });
            }
        });
        grid.dataSource.read();
    }
</script>

