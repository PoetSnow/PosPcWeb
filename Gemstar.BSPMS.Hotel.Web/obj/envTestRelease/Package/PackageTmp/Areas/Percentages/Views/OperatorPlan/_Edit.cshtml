@using Kendo.Mvc.UI
@model Gemstar.BSPMS.Hotel.Web.Areas.Percentages.Models.OperatorPlan.OperatorPlanEditViewModel
@using (Html.BeginForm())
{
    @Html.HiddenFor(m => m.OriginJsonData)
    @Html.HiddenFor(m => m.PlanId)
    <table class="editFormTable">
        <tr>
            <td class="textright">@Html.LabelFor(m => m.OperatorId)</td>
            <td>
                @Html.Kendo().DropDownListFor(e => e.OperatorId).HtmlAttributes(new { style = " width:100%;" }).DataTextField("Text").DataValueField("Value").DataSource(e => e.Read(r => { r.Action("ListItemsForOperator", "OperatorPlan", new { area = "Percentages", rnd = new Random().NextDouble() }); }))
            </td>
            <td>@Html.ValidationMessageFor(m => m.OperatorId, "*")</td>
        </tr>
        <tr>
            <td class="textright">@Html.LabelFor(m => m.PlanDate)</td>
            <td>@Html.Kendo().DatePickerFor(m => m.PlanDate).Format("yyyy-MM").HtmlAttributes(new { style = " width:100%;" }).Start(CalendarView.Year).Depth(CalendarView.Year)</td>
            <td>@Html.ValidationMessageFor(m => m.PlanDate, "*")</td>
        </tr>
        <tr>
            <td class="textright">@Html.LabelFor(m => m.PlanSource)</td>
            <td>
                @Html.Kendo().DropDownListFor(e => e.PlanSource).HtmlAttributes(new { style = " width:100%;" }).DataTextField("Text").DataValueField("Value").DataSource(e => e.Read(r => { r.Action("ListItemsForSource", "OperatorPlan", new { area = "Percentages", rnd = new Random().NextDouble() }); }))
            </td>
            <td>@Html.ValidationMessageFor(m => m.PlanSource, "*")</td>
        </tr>
        <tr>
            <td class="textright">@Html.LabelFor(m => m.PlanAmount)</td>
            <td>@Html.Kendo().NumericTextBoxFor(m => m.PlanAmount).Min(1).Format("n0").Decimals(0).HtmlAttributes(new { style = " width:100%;" })</td>
            <td>@Html.ValidationMessageFor(m => m.PlanAmount, "*")</td>
        </tr>
    </table>
    @Html.ValidationSummary()
    <div class="formButtons">
        <button class="k-primary k-button" id="saveEditFormButton" role="button" data-role="button">保存</button>&nbsp;&nbsp;
        <button class="k-primary k-button" id="closeEditFormButton" role="button" data-role="button">返回</button>
    </div>
}
<script type="text/javascript">
    $(function () {
        $.validator.unobtrusive.parse(document);
        $("#saveEditFormButton").click(function (e) {
            e.preventDefault();
            saveFormData($("#saveEditFormButton"));
        });
        $("#closeEditFormButton").click(function (e) {
            e.preventDefault();
            closeEditFormWindow();
        });
    });
</script>
