<div class="formButtons" style="clear: both;text-align: center;margin-top: 30px;">
    <button class="k-primary k-button" id="companyImgButton" role="button" data-role="button">图片附件</button>&nbsp;&nbsp;
    <button class="k-primary k-button" id="EditFormButton" role="button" data-role="button">修改</button>&nbsp;&nbsp;
    <button class="k-primary k-button" id="companySignerButton" role="button" data-role="button">签单人</button>&nbsp;&nbsp;
    <button class="k-primary k-button" id="saveEditFormButton1" role="button" data-role="button">往来明细</button>&nbsp;&nbsp;
    <button class="k-primary k-button" id="saveEditFormButton2" role="button" data-role="button">消费明细</button>&nbsp;&nbsp;
    <button class="k-primary k-button" id="closeEditFormButton" role="button" data-role="button">返回</button>
</div>
<script type="text/javascript">
    $(function () {
        $.validator.unobtrusive.parse(document);
        
        $("#closeEditFormButton").click(function (e) {
            e.preventDefault();
            //刷新合约单位列表
            refreshGridList();
            closeEditFormWindow();
            
        });
        $("#companyImgButton").click(function () {
            top.openSecondKendoWindow("导入图片附件", "/CRM/CompanyImgManage/Add/" + $("#Id").val());
        });
        $("#saveEditFormButton1").click(function () {
            top.openSecondKendoWindow("往来明细", "/CRM/CompanyCaManage/Index/" + $("#Id").val());
        });
        $("#saveEditFormButton2").click(function () {
            top.openSecondKendoWindow("消费明细", "/CRM/CompanyTransManage/Index/" + $("#Id").val());
        });
        $("#EditFormButton").click(function () {
            top.openSecondKendoWindow("修改合约单位", "/CRM/CompanyManage/Edit/" + $("#Id").val());
        });              
        $("#companySignerButton").click(function () {
            top.openSecondKendoWindow("合约单位签单人", "@Url.Action("Index", "CompanySignerManage", new { area= "CRM" })" + "?companyId=" + $("#Id").val());
        });
        $("#commonKendoWindow").prev().find(".k-i-close").click(function () {
            refreshGridList();
        })
    });
    function refreshGridList() {
        try {
            $(document).find("iframe")[0].contentWindow.$('iframe')[0].contentWindow.refreshGrid();
        } catch (e) { }
    }
</script>
