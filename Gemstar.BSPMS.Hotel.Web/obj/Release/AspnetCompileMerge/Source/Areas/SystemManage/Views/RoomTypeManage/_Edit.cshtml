@model Gemstar.BSPMS.Hotel.Web.Areas.SystemManage.Models.RoomTypeManage.RoomTypeEditViewModel
@using (Html.BeginForm())
{
    ViewBag.PicAdd = Model.PicAdd;
    @Html.HiddenFor(m => m.OriginJsonData)
    @Html.HiddenFor(m => m.Id)
    <div style="max-height:600px;overflow-y:auto;">
        <table class="editFormTable">
            <tr>
                <td class="textright">@Html.LabelFor(m => m.Code)</td>
                <td>@Html.TextBoxFor(m => m.Code, new { @class = "k-textbox", style = "width:100%;" })</td>
                <td>@Html.ValidationMessageFor(m => m.Code, "*")</td>
                <td class="textright">@Html.LabelFor(m => m.Id)</td>
                <td>
                    @(Html.Kendo().TextBoxFor(m => m.Id).HtmlAttributes(new { style = "width:100%;background-color:rgb(245,245,245);" }).Enable(false))
                </td>
                <td>@Html.ValidationMessageFor(m => m.Id, "*")</td>
            </tr>
            <tr>
                <td class="textright">@Html.LabelFor(m => m.Name)</td>
                <td>@Html.TextBoxFor(m => m.Name, new { @class = "k-textbox", style = "width:100%;" })</td>
                <td>@Html.ValidationMessageFor(m => m.Name, "*")</td>
                <td class="textright">@Html.LabelFor(m => m.ShortName)</td>
                <td>@Html.TextBoxFor(m => m.ShortName, new { @class = "k-textbox", style = "width:100%;", })</td>
                <td>@Html.ValidationMessageFor(m => m.ShortName, "*")</td>
            </tr>
            <tr>
                <td class="textright">@Html.LabelFor(m => m.Price)</td>
                <td colspan="1">@Html.TextBoxFor(m => m.Price, new { @class = "k-textbox", style = "width:100%;" })</td>
                <td>@Html.ValidationMessageFor(m => m.Price, "*")</td>
                <td class="textright"> </td>
                <td>
                    @Html.Kendo().CheckBoxFor(e => e.isChangeDirty).HtmlAttributes(new { id = "isChangeDirty" })
                    @Html.Kendo().CheckBoxFor(e => e.isDepChangeDirty).HtmlAttributes(new { id = "isDepChangeDirty" })
                </td>
                <td></td>
            </tr>
            <tr>
                <td class="textright">@Html.LabelFor(m => m.Count)</td>
                <td>@Html.TextBoxFor(m => m.Count, new { @class = "k-textbox", style = "width:100%;" })</td>
                <td>@Html.ValidationMessageFor(m => m.Count, "*")</td>
                <td class="textright">@Html.LabelFor(m => m.MaxCount)</td>
                <td>@Html.TextBoxFor(m => m.MaxCount, new { @class = "k-textbox", style = "width:100%;" })</td>
                <td>@Html.ValidationMessageFor(m => m.MaxCount, "*")</td>
            </tr>
            <tr>
                <td class="textright">@Html.LabelFor(m => m.IsAdd)</td>
                <td>
                    @Html.Kendo().DropDownListFor(e => e.IsAdd).HtmlAttributes(new { style = " width:100%" }).DataTextField("Text").DataValueField("Value").DataSource(e => { e.Read(r => r.Action("GetIsSelectList", "RoomTypeManage", new { rnd = new Random().NextDouble() })); })
                </td>
                <td>@Html.ValidationMessageFor(m => m.IsAdd, "*")</td>
                <td class="textright">@Html.LabelFor(m => m.IsNotRoom)</td>
                <td>
                    @Html.Kendo().DropDownListFor(e => e.IsNotRoom).HtmlAttributes(new { style = " width:100%" }).DataTextField("Text").DataValueField("Value").DataSource(e => { e.Read(r => r.Action("GetIsSelectList", "RoomTypeManage", new { rnd = new Random().NextDouble() })); })
                </td>
                <td>@Html.ValidationMessageFor(m => m.IsNotRoom, "*")</td>
            </tr>
            <tr>
                <td class="textright">@Html.LabelFor(m => m.ChanelValid)</td>
                <td>
                    @Html.Kendo().DropDownListFor(e => e.ChanelValid).HtmlAttributes(new { style = " width:100%" }).DataTextField("Text").DataValueField("Value").DataSource(e => { e.Read(r => r.Action("GetIsSelectList", "RoomTypeManage", new { rnd = new Random().NextDouble() })); })
                </td>
                <td>@Html.ValidationMessageFor(m => m.ChanelValid, "*")</td>
                <td class="textright">@Html.LabelFor(m => m.IsClose)</td>
                <td>
                    @Html.Kendo().DropDownListFor(e => e.IsClose).HtmlAttributes(new { style = " width:100%" }).DataTextField("Text").DataValueField("Value").DataSource(e => { e.Read(r => r.Action("GetIsSelectList", "RoomTypeManage", new { rnd = new Random().NextDouble() })); })
                </td>
                <td>@Html.ValidationMessageFor(m => m.IsClose, "*")</td>
            </tr>
            <tr>
                <td class="textright">@Html.LabelFor(m => m.OverQauntity)</td>
                <td>@Html.TextBoxFor(m => m.OverQauntity, new { @class = "k-textbox", style = "width:100%;" })</td>
                <td>@Html.ValidationMessageFor(m => m.OverQauntity, "*")</td>
                <td class="textright">@Html.LabelFor(m => m.Seqid)</td>
                <td>@Html.TextBoxFor(m => m.Seqid, new { @class = "k-textbox", style = "width:100%;" })</td>
                <td>@Html.ValidationMessageFor(m => m.Seqid, "*")</td>
            </tr>
            <tr>
                <td class="textright">@Html.LabelFor(m => m.Cdescribe)</td>
                <td colspan="4">@Html.TextAreaFor(m => m.Cdescribe, new { @class = "k-textbox", style = "width:100%;height:50px;" })</td>
                <td>@Html.ValidationMessageFor(m => m.Cdescribe, "*")</td>
            </tr>
            <tr style="display:none;">
                <td class="textright">@Html.LabelFor(m => m.PicAdd)</td>
                <td colspan="4">
                    @*<div id="PicAdd"></div>*@
                    @Html.TextBoxFor(m => m.PicAdd, new { style = "width:100%; background-color:#eee;", @readonly = "true" })
                </td>

                <td>@Html.ValidationMessageFor(m => m.PicAdd, "*")</td>
            </tr>
            <tr style="display:none;">

                <td colspan="6">
                    @Html.Partial("_QiniuPictureUploadmulti")

                </td>

            </tr>
            @foreach (var roompara in ViewBag.roomtypepara)
                {
                <tr>

                    <td class="textright">@roompara.ParaName</td>
                    @if (roompara.ParaCode == "rt1")
                    {
                        <td>@Html.TextBoxFor(m => m.Rt1, new { @class = "k-textbox", style = "width:100%;" })</td>
                        <td>
                            @Html.ValidationMessageFor(m => m.Rt1, "*")
                        </td>
                    }
                    else if (roompara.ParaCode == "rt2")
                    {
                        <td>@Html.TextBoxFor(m => m.Rt2, new { @class = "k-textbox", style = "width:100%;" })</td>
                        <td>@Html.ValidationMessageFor(m => m.Rt2, "*")</td>
                    }
                    else if (roompara.ParaCode == "rt3")
                    {
                        <td>@Html.TextBoxFor(m => m.Rt3, new { @class = "k-textbox", style = "width:100%;" })</td>
                        <td>@Html.ValidationMessageFor(m => m.Rt3, "*")</td>
                    }
                    else if (roompara.ParaCode == "rt4")
                    {
                        <td>@Html.TextBoxFor(m => m.Rt4, new { @class = "k-textbox", style = "width:100%;" })</td>
                        <td>@Html.ValidationMessageFor(m => m.Rt4, "*")</td>
                    }
                    else if (roompara.ParaCode == "rt5")
                    {
                        <td>@Html.TextBoxFor(m => m.Rt5, new { @class = "k-textbox", style = "width:100%;" })</td>
                        <td>@Html.ValidationMessageFor(m => m.Rt5, "*")</td>
                    }
                    else if (roompara.ParaCode == "rt6")
                    {
                        <td>@Html.TextBoxFor(m => m.Rt6, new { @class = "k-textbox", style = "width:100%;" })</td>
                        <td>@Html.ValidationMessageFor(m => m.Rt6, "*")</td>
                    }
                    else if (roompara.ParaCode == "rt7")
                    {
                        <td>@Html.TextBoxFor(m => m.Rt7, new { @class = "k-textbox", style = "width:100%;" })</td>
                        <td>@Html.ValidationMessageFor(m => m.Rt7, "*")</td>
                    }
                    else if (roompara.ParaCode == "rt8")
                    {
                        <td>@Html.TextBoxFor(m => m.Rt8, new { @class = "k-textbox", style = "width:100%;" })</td>
                        <td>@Html.ValidationMessageFor(m => m.Rt8, "*")</td>
                    }
                    @if (roompara.dataType == "percent")
                    {
                        <td> 
                            <label>%</label> 
                        </td>
                    }
                </tr>

            }
        </table>

        @Html.ValidationSummary()
        <div class="formButtons">
            <button class="k-primary k-button" id="saveEditFormButton" role="button" data-role="button">保存</button>&nbsp;&nbsp;
            <button class="k-primary k-button" id="closeEditFormButton" role="button" data-role="button">返回</button>
        </div>
    </div>
}
<script type="text/javascript">
    $(function () {

        $.validator.unobtrusive.parse(document);
        $("#saveEditFormButton").click(function (e) {
            e.preventDefault();
            Savadelimg()
            saveFormData($("#saveEditFormButton"));
        });
        $("#closeEditFormButton").click(function (e) {
            e.preventDefault();
            closeEditFormWindow();
        });
    });
</script>