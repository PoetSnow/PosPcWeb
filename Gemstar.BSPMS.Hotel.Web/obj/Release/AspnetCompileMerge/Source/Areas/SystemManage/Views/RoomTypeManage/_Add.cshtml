                @Html.Kendo().DropDownListFor(e => e.IsNotRoom).HtmlAttributes(new { style = " width:100%" }).DataTextField("Text").DataValueField("Value").DataSource(e => { e.Read(r => r.Action("GetIsSelectList", "RoomTypeManage", new { rnd = new Random().NextDouble() })); })
            </td>
            <td>@Html.ValidationMessageFor(m => m.IsNotRoom, "*")</td>
        </tr>
       

        <tr>
            <td class="textright">@Html.LabelFor(m => m.ChanelValid)</td>
