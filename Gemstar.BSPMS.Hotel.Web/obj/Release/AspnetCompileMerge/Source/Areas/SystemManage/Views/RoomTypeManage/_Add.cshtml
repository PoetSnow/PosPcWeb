            <td>@Html.ValidationMessageFor(m => m.ShortName, "*")</td>
        </tr>
        <tr>
            <td class="textright">@Html.LabelFor(m => m.Price)</td>
            <td colspan="1">@Html.TextBoxFor(m => m.Price, new { @class = "k-textbox", style = "width:100%;" })</td>
            <td>@Html.ValidationMessageFor(m => m.Price, "*")</td>
            <td class="textright"> </td>
            <td>
                @Html.Kendo().CheckBoxFor(e => e.isChangeDirty).HtmlAttributes(new { id = "isChangeDirty" }).Checked(true)
