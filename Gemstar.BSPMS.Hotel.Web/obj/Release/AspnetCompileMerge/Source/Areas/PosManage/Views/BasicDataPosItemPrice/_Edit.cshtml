            <td>@Html.ValidationMessageFor(m => m.Percent, "*")</td>
        </tr>
        <tr>
            <td class="textright">@Html.LabelFor(m => m.MemberPrice)</td>
            <td>@Html.Kendo().NumericTextBoxFor(m => m.MemberPrice).HtmlAttributes(new { style = "width:100%;" })</td>
            <td>@Html.ValidationMessageFor(m => m.MemberPrice, "*")</td>
            <td class="textright">@Html.LabelFor(m => m.IsDefault)</td>
            <td>@Html.Kendo().CheckBoxFor(m => m.IsDefault).HtmlAttributes(new { style = "width:100%;" })</td>
            <td>@Html.ValidationMessageFor(m => m.IsDefault, "*")</td>
        </tr>
        <tr>
            <td class="textright">@Html.LabelFor(m => m.TabTypeid)</td>
            <td>@Html.Kendo().DropDownListFor(e => e.TabTypeid).HtmlAttributes(new { style = " width:100%" }).DataTextField("Text").DataValueField("Value").Filter("contains").DataSource(e => { e.Read(r => r.Action("ListItemsForPosTabtype", "BasicDataPosTabtype", new { rnd = new Random().NextDouble() })); }).OptionLabel("请选择餐台类型")</td>
