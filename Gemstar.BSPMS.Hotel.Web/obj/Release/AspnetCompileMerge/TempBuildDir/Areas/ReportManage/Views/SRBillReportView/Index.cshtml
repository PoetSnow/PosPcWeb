                <td>@(Html.Kendo().TextBox().Name("styleNewName"))</td>
            </tr>
            <tr>
                <td></td>
                <td>
                    @(Html.Kendo().Button().Name("saveStyle").Content("增加").Events(e => e.Click("saveStyle_clicked")))
