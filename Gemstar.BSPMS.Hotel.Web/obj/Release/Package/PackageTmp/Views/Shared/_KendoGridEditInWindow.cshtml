            //jAlert(ids.join(","));
            top.openKendoWindow("批量发放优惠券", "@Url.Action("GiveCoupon")", { id: ids.join(",") });
        }
    }
    function closeEditFormWindow() {
        top.closeKendoWindow();
    }
    function closeSecondEditFormWindow() {
        top.closeSecondKendoWindow();
    }

</script>
