                return false;
            }
        }

        var grid = $("#gridBill").data("kendoGrid");
        var selectedRows = grid.select();
        if (selectedRows.length > 0) {
            var row = selectedRows[0];
            var rowData = grid.dataItem(row);

            var IsOrderAgain = $("#IsOrderAgain").val();
            if (IsOrderAgain ==0) {
                if (rowData["status"] == 2) {
                    CheckFlag = "1";
                    layer.alert("已付款的账单不能重复买单，请先反结！", { title: "快点云Pos提示", skin: "err" });
                    return false;
                }
            }

            var model = {
                Tabid: rowData["tabid"],
                TabNo: rowData["tabno"],
                Billid: rowData["billid"],
            };

            $.ajax({
                url: '@Url.Action("PayCheck", "PosCashier")',
                type: "post",
                data: model,
                dataType: "json",
                success: function (data) {
                    model = {
                        billid: rowData["billid"],
                        mBillid: rowData["mBillid"],
                        Callback: "PaymentSuccess('" + rowData["billid"] + "','" + rowData["mBillid"]+"')",
                        InputCallback: "PaymentSuccess('" + rowData["billid"] + "','" + rowData["mBillid"]+"')",
                    };

                    if (data.Success == true)
                    {
                        paymentByCheckRefe(model);
                        layer.closeAll();
                    }
                    else if (data.Success == false)
                    {
                       
                        if (data.ErrorCode == 1)
                        {
                            paymentByCheckRefe(model);
                            layer.closeAll();
                        }
                        else if (data.ErrorCode == 2)
                        {
                            layer.confirm(data.Data,{
                                btn: ['继续', '取消'] //按钮
                                , title: '快点云Pos提示'
                                , shade: 'rgba(0,0,0,0)'
                            }, function () {
                                paymentByCheckRefe(model);
                                layer.closeAll();
                                }, function () {
                                    CheckFlag = 1;
                                layer.closeAll();
                            });
                        }
                        else {
                            CheckFlag = 1;
                            layer.alert(data.Data, { title: "快点云Pos提示", skin: "err"});
                        }
                    }
                    else
                    {
                        CheckFlag = 1;
                        layer.alert(data.Data, { title: "快点云Pos提示", skin: "err" });
                    }
                },
                error: function (data) {
                    CheckFlag = 1;
                    layer.alert(data.responseText, { title: "快点云Pos提示", skin: "err" });
                }
            });
        }
        }

    }

    //打单
    function intimidate() {
        let printModel = localStorage.getItem("printModel");
        var grid = $("#gridBill").data("kendoGrid");
        var selectedRows = grid.select();
        if (selectedRows.length > 0 || printModel != null) {

            var row = selectedRows[0];
            var data = grid.dataItem(row);

            if(printModel != null)
            {
                model = JSON.parse(printModel);
            }
            else
            {
                var model = {
                    ReportCode: "PosBillPrint",
                    ProcedureName: "up_pos_print_billDetail",
                    ParameterValues: "@@h99billid=" + data["billid"] + "&@@h99mBillid=" + data["mBillid"] + "",
                    IsOpenSearchWindow: false,
