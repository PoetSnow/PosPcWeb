            if (isshow == true) {
                reject();
            }
            isshow = true;
            layer.confirm(_data, {
                btn: ['是', '否'] //按钮
                , title: '快点云Pos提示'
                , shade: 'rgba(0,0,0,0)'
            }, function () {
                resovle("1");
            }, function () {
                resovle("2");
            });
        });
    }

