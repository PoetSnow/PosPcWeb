    //结账
    function paymentByCheckRefe(model) {
        $.ajax({
            url: '@Url.Action("CheckRefeITagPrintBill", "PosCashier")',
            type: "post",
            data: model,
            dataType: "json",
            success: function (data) {
                if (data.Success) {
                    $("#isPrintBill").val(data.Data);//打印账单
                    payment(model);
                }
                else {
                    if (data.ErrorCode == 1) {
                        layer.confirm(data.Data, {
                            btn: ['继续', '取消'] //按钮
                         , title: '快点云Pos提示'
                         , shade: 'rgba(0,0,0,0)'
                        }, function () {
                            payment(model);

                            }, function () {
                                CheckFlag = 1;
                            layer.closeAll();
                        });
                    }
                    if (data.ErrorCode == 2) {
                        paycheck(data.Data).then(function (status) {
                            if (status == "1") {
                                $("#isPrintBill").val(1);//打印账单
                                payment(model);
                            }
                            else if (status == "2") {
                                $("#isPrintBill").val(0);   //不打印账单
                                payment(model);
                            }
                        }).catch(function () {

                        }).finally(function () {
                            isshow = false
                        });
                    }
                    if (data.ErrorCode == 3) {
                        CheckFlag = 1;
                        layer.alert(data.Data, { title: "快点云Pos提示", skin: "err" });
                    }
                }
            },
            error: function (data) {
                CheckFlag = 1;
                layer.alert(data.responseText, { title: "快点云Pos提示", skin: "err" });
            }
        });

    }

