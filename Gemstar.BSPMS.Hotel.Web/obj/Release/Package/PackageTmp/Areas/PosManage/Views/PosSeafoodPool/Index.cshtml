    //已称重列表
    function WeighedList()
    {
          $.ajax({
            url: '@Url.Action("_WeighedList", "PosSeafoodPool")',
            type: "post",
            data: {},
            dataType: "html",
            success: function (data) {
                layer.open({
                    type: 1,
                    title: "已称重列表",
                    skin: 'layui-layer-demo', //样式类名
                    shadeClose: false,
                    closeBtn: 1, //不显示关闭按钮
                    area: ['70%', '50%'], //宽高
                    content: data
                });

            },
            error: function (data) {
                layer.alert(data.responseText, { title: "快点云Pos提示", skin: 'err' });
            }
