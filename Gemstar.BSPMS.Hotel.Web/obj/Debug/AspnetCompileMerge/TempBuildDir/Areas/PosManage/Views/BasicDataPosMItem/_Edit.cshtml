@model Gemstar.BSPMS.Hotel.Web.Areas.PosManage.Models.BasicDataPosMItem.PosMItemEditViewModel
@{
    ViewBag.FileName = Model.Bmp;
}

<style>
    .k-panelbar > li.k-state-default > .k-link {
        color: #333;
    }
</style>

<link href="~/Content/ScanOrder/viewer.min.css" rel="stylesheet" />

@using (Html.BeginForm())
{
    @Html.HiddenFor(m => m.OriginJsonData)
    @Html.HiddenFor(m => m.Id)
    @Html.HiddenFor(m => m.Hid)
<table class="editFormTable">
    <tr>
        <td class="textright">@Html.LabelFor(m => m.Code)</td>
        <td>@Html.Kendo().TextBoxFor(e => e.Code).HtmlAttributes(new { style = " width:100%" }).Enable(false)</td>
        <td>@Html.ValidationMessageFor(m => m.Code, "*")</td>
    </tr>
    <tr>
        <td class="textright">@Html.LabelFor(m => m.Cname)</td>
        <td>@Html.Kendo().TextBoxFor(e => e.Cname).HtmlAttributes(new { style = " width:100%" }).Enable(false)</td>
        <td>@Html.ValidationMessageFor(m => m.Cname, "*")</td>
    </tr>
    <tr>
        <td class="textright">@Html.LabelFor(m => m.Ename)</td>
        <td>@Html.Kendo().TextBoxFor(e => e.Ename).HtmlAttributes(new { style = " width:100%" }).Enable(false)</td>
        <td>@Html.ValidationMessageFor(m => m.Ename, "*")</td>
    </tr>
    <tr>
        <td class="textright">@Html.LabelFor(m => m.DeptClassName)</td>
        <td>@Html.Kendo().TextBoxFor(e => e.DeptClassName).HtmlAttributes(new { style = " width:100%" }).Enable(false)</td>
        <td>@Html.ValidationMessageFor(m => m.DeptClassName, "*")</td>
    </tr>
    <tr>
        <td class="textright">@Html.LabelFor(m => m.SubClassName)</td>
        <td>@Html.Kendo().TextBoxFor(e => e.SubClassName).HtmlAttributes(new { style = " width:100%" }).Enable(false)</td>
        <td>@Html.ValidationMessageFor(m => m.SubClassName, "*")</td>
    </tr>
    @Html.Partial("_QiniuPictureUploadSingle")
    <tr style="display:none;">
        <td class="textright">@Html.LabelFor(m => m.Bmp)</td>
        <td>@Html.Kendo().TextBoxFor(e => e.Bmp).HtmlAttributes(new { style = " width:100%" })</td>
        <td>@Html.ValidationMessageFor(m => m.Bmp, "*")</td>
    </tr>
    <tr>
        <td class="textright">@Html.LabelFor(m => m.Seqid)</td>
        <td>@Html.Kendo().TextBoxFor(m => m.Seqid).HtmlAttributes(new { style = " width:100%" })</td>
        <td>@Html.ValidationMessageFor(m => m.Seqid, "*")</td>
    </tr>
    <tr>
        <td class="textright">@Html.LabelFor(m => m.Remark)</td>
        <td>@Html.Kendo().TextBoxFor(m => m.Remark).HtmlAttributes(new { style = " width:100%" })</td>
        <td>@Html.ValidationMessageFor(m => m.Remark, "*")</td>
    </tr>
</table>

    @Html.ValidationSummary()
    <div class="formButtons">
        <button class="k-primary k-button" id="saveEditFormButton" role="button" data-role="button">确定</button>&nbsp;&nbsp;
        <button class="k-primary k-button" id="closeEditFormButton" role="button" data-role="button">返回</button>
    </div>
}
<script src="~/Scripts/ScanOrder/viewer.min.js"></script>
<script src="~/Scripts/ScanOrder/webuploader.js"></script>
<script type="text/javascript">
    $(function () {
        $.validator.unobtrusive.parse(document);
        $("#saveEditFormButton").click(function (e) {
            e.preventDefault();
            saveFormData($("#saveEditFormButton"));
        });
        $("#closeEditFormButton").click(function (e) {
            e.preventDefault();
            closeEditFormWindow();
        });
    });
</script>
