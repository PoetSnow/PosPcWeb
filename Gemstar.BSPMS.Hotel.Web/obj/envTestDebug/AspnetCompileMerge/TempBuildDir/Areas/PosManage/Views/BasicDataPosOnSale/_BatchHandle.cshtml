<script>

    $(function () {
        $('.btype').click(function () {
            var _value = $("input[name='btype']:checked").val();
            if (btypevalue != _value) {
                btypevalue = _value;
                if (_value == 1) {
                    queryurl = "_PosItemQuery";
                    gridurl = "_PosItemGrid";
                }
                else if (_value == 2 || _value == 3) {
                    queryurl = "_PosOnSaleQuery";
                    gridurl = "_PosOnSaleGrid";

                }
                else {
                    jAlter("操作类型不存在");
                    return false;
                }
                $.ajax({
                    url: '/posmanage/BasicDataPosOnSale/' + gridurl,
                    type: "post",
                    data: {},
                    dataType: "html",
                    success: function (data) {
                        $("#selIds").val("");//清空已选项目
                        $('.grid_div').html(data);
                    },
                    error: function (data) {
                        jAlert(data.responseText);
                    }
                });


            }
        });


        //定时器更改查询状态
        setTimeout(function () {
            isfirst = 0;
        },10000);

    });

    function tijiao() {

        if (btypevalue == 1) {
            $.ajax({
                url: '/posmanage/BasicDataPosOnSale/BatchAdd',
                type: "post",
                data: $("#addfrom").serialize(),
                dataType: "json",
                success: function (result) {
                    if (result.Success) {
                        closeEditFormWindow();
                        top.posonsalegrid.dataSource.read();

                    }
                    else {
                        jAlert(result.Data);
                    }
                },
                error: function (result) {
                    jAlert(result.Data);
                }
            });
        }
        else if (btypevalue == 2) {
            $.ajax({
                url: '/posmanage/BasicDataPosOnSale/BatchUpdate',
                type: "post",
                data: $("#addfrom").serialize(),
                dataType: "json",
                success: function (result) {
                    if (result.Success) {
                        closeEditFormWindow();
                        top.posonsalegrid.dataSource.read();

                    }
                    else {
                        jAlert(result.Data);
                    }
                },
                error: function (result) {
                    jAlert(result.Data);
                }
            });
        }
        else if (btypevalue == 3) {
            var ids = $("#selIds").val();
            var idarray = ids.split('|');
            var ids = "";
            for (var i = 0; i < idarray.length; i++) {
                if (idarray[i] != ',') {
                    ids += idarray[i] + ",";
                }
            }

            if (ids.length == 0) {
                jAlert("请选择要删除的特价菜");
            } else {
                jConfirm("确认要删除所有选中的数据行?", "确认", "取消", function (confirmed) {
                    if (confirmed) {
                        $.post('@Url.Action("BatchDelete", "BasicDataPosOnSale")', { id: ids }, function (data) {
                            if (data.Success) {
                                jAlert("删除成功");
                                closeEditFormWindow();
                                top.posonsalegrid.dataSource.read();
                            } else {
                                jAlert(data.Data);
                            }
                            if (typeof (onSuccess) == "function") { onSuccess(data); }
                        }, 'json');
                    }
                });
            }
        }
    }

    function query() {
        $.ajax({
            url: '/posmanage/BasicDataPosOnSale/' + queryurl,
            type: "post",
            data: QueryText(),
            dataType: "html",
            success: function (data) {
                $("#posMaskWindow").html(data);
                $("#posMaskWindow_wnd_title").text("请选择查询条件");
                $(".k-i-close").click(function () {
                    closeGeneralWindow();
                });
                openGeneralWindow();
            },
            error: function (data) {
                jAlert(data.responseText);
            }
        });


    }
</script>

<script>
    //选项卡切换
    var name_0 = 'one';
    var cursel_0 = 1;
    var links_len;
    $(function () {
        //选项卡
        var links = document.getElementById("tab1").getElementsByTagName('li')
        links_len = links.length;
        setTab(name_0, cursel_0);
    })
    function setTab(name, cursel) {
        cursel_0 = cursel;
        for (var i = 1; i <= links_len; i++) {
            if (i == cursel) {
                $("#" + name + i).attr("class", "off");
                $("#con_" + name + "_" + i).attr("style", "display:block;padding:15px");
            }
            else {

                $("#" + name + i).removeClass("off");
                $("#con_" + name + "_" + i).attr("style", "display:none");
            }
        }
    }
</script>
