@model Gemstar.BSPMS.Hotel.Web.Areas.PosManage.Models.BasicDataPosRequest.RequestAddViewModel

<script type="text/javascript">
    function moduleChanged() {
        var Refeid = $("#Refeid").data("kendoDropDownList");
        Refeid.dataSource.read();
    }
    function posCode_paras() {
        var module = $("#Module").data("kendoDropDownList");
        var moduleCode = module.value();
        return {
            moduleCode: moduleCode
        };
    }
</script>

@using (Html.BeginForm())
{
    <table class="editFormTable">
        <tr>
            <td class="textright">@Html.LabelFor(m => m.Code)</td>
            <td>@Html.Kendo().TextBoxFor(m => m.Code).HtmlAttributes(new { style = "width:100%;", placeholder = "请输入代码", onkeyup = "checkCode(this)" })</td>
            <td>@Html.ValidationMessageFor(m => m.Code, "*")</td>
            <td class="textright">@Html.LabelFor(m => m.Cname)</td>
            <td>@Html.Kendo().TextBoxFor(m => m.Cname).HtmlAttributes(new { style = "width:100%;", placeholder = "请输入中文名称"})</td>
            <td>@Html.ValidationMessageFor(m => m.Cname, "*")</td>
        </tr>
        <tr>
            <td class="textright">@Html.LabelFor(m => m.Ename)</td>
            <td>@Html.Kendo().TextBoxFor(m => m.Ename).HtmlAttributes(new { style = "width:100%;" })</td>
            <td>@Html.ValidationMessageFor(m => m.Ename, "*")</td>
            <td class="textright">@Html.LabelFor(m => m.iTagOperator)</td>
            <td>@Html.Kendo().DropDownListFor(e => e.iTagOperator).HtmlAttributes(new { style = " width:100%" }).DataTextField("Text").DataValueField("Value").DataSource(e => { e.Read(r => r.Action("ListItemsForPosiTagOperator", "BasicDataPosPos", new { rnd = new Random().NextDouble() })); }).OptionLabel("请选择要求操作")</td>
            <td>@Html.ValidationMessageFor(m => m.iTagOperator, "*")</td>
        </tr>
        <tr>
            <td class="textright">@Html.LabelFor(m => m.ReQuest)</td>
            <td>@Html.Kendo().TextBoxFor(m => m.ReQuest).HtmlAttributes(new { style = "width:100%;" })</td>
            <td>@Html.ValidationMessageFor(m => m.ReQuest, "*")</td>
            <td class="textright">@Html.LabelFor(m => m.IsCombine)</td>
            <td>@Html.Kendo().DropDownListFor(e => e.IsCombine).HtmlAttributes(new { style = " width:100%" }).DataTextField("Text").DataValueField("Value").DataSource(e => { e.Read(r => r.Action("ListItemsForPosIsCombine", "BasicDataPosPos", new { rnd = new Random().NextDouble() })); }).OptionLabel("请选择联单打印")</td>
            <td>@Html.ValidationMessageFor(m => m.IsCombine, "*")</td>
        </tr>
        <tr>
            <td class="textright">@Html.LabelFor(m => m.IsTagProperty)</td>
            <td>@Html.Kendo().DropDownListFor(e => e.IsTagProperty).HtmlAttributes(new { style = " width:100%" }).DataTextField("Text").DataValueField("Value").DataSource(e => { e.Read(r => r.Action("ListItemsForPosIsTagProperty", "BasicDataPosPos", new { rnd = new Random().NextDouble() })); }).OptionLabel("请选择要求属性")</td>
            <td>@Html.ValidationMessageFor(m => m.IsTagProperty, "*")</td>
            <td class="textright">@Html.LabelFor(m => m.IsProduce)</td>
            <td>@Html.Kendo().DropDownListFor(e => e.IsProduce).HtmlAttributes(new { style = " width:100%" }).DataTextField("Text").DataValueField("Value").DataSource(e => { e.Read(r => r.Action("ListItemsForPosIsProduce", "BasicDataPosPos", new { rnd = new Random().NextDouble() })); }).OptionLabel("请选择出品状态")</td>
            <td>@Html.ValidationMessageFor(m => m.IsProduce, "*")</td>
        </tr>
        <tr>
            <td class="textright">@Html.LabelFor(m => m.iMinute)</td>
            <td>@Html.Kendo().TextBoxFor(m => m.iMinute).HtmlAttributes(new { style = "width:100%;" })</td>
            <td>@Html.ValidationMessageFor(m => m.iMinute, "*")</td>
            <td class="textright">@Html.LabelFor(m => m.Module)</td>
            <td>@Html.Kendo().DropDownListFor(e => e.Module).HtmlAttributes(new { style = " width:100%" }).DataTextField("Text").DataValueField("Value").DataSource(e => { e.Read(r => r.Action("ListItemsForPosModules", "BasicDataPosPos", new { rnd = new Random().NextDouble() })); }).Events(e => e.Change("moduleChanged"))</td>
            <td>@Html.ValidationMessageFor(m => m.Module, "*")</td>
        </tr>
        <tr>
            <td class="textright">@Html.LabelFor(m => m.Refeid)</td>
            <td>@Html.Kendo().DropDownListFor(e => e.Refeid).HtmlAttributes(new { style = " width:100%" }).DataTextField("Text").DataValueField("Value").DataSource(e => { e.Read(r => r.Action("ListItemsForPosRefeByModules", "BasicDataPosRefe", new { rnd = new Random().NextDouble() }).Data("posCode_paras")).ServerFiltering(true); }).OptionLabel("请选择营业点")</td>
            <td>@Html.ValidationMessageFor(m => m.Refeid, "*")</td>
            <td class="textright">@Html.LabelFor(m => m.Seqid)</td>
            <td>@Html.Kendo().IntegerTextBoxFor(m => m.Seqid).HtmlAttributes(new { style = "width:100%;" })</td>
            <td>@Html.ValidationMessageFor(m => m.Seqid, "*")</td>
        </tr>
        <tr>
            <td class="textright">@Html.LabelFor(m => m.iShowWx)</td>
            <td>@Html.Kendo().CheckBoxFor(m => m.iShowWx).HtmlAttributes(new { style = "width:100%;" })</td>
            <td>@Html.ValidationMessageFor(m => m.iShowWx, "*")</td>
            <td class="textright">@Html.LabelFor(m => m.Remark)</td>
            <td> @Html.Kendo().TextBoxFor(m => m.Remark).HtmlAttributes(new { style = "width:100%;" })</td>
            <td>@Html.ValidationMessageFor(m => m.Remark, "*")</td>
        </tr>
    </table>
    @Html.ValidationSummary()
    <div class="formButtons">
        <button class="k-primary k-button" id="saveEditFormButton" role="button" data-role="button">确定</button>&nbsp;&nbsp;
        <button class="k-primary k-button" id="closeEditFormButton" role="button" data-role="button">返回</button>
    </div>
}
<script type="text/javascript">
    $(function () {
        $.validator.unobtrusive.parse(document);
        $("#saveEditFormButton").click(function (e) {
            e.preventDefault();
            saveFormData($("#saveEditFormButton"));
        });
        $("#closeEditFormButton").click(function (e) {
            e.preventDefault();
            closeEditFormWindow();
        });
        moduleChanged();
    });
</script>