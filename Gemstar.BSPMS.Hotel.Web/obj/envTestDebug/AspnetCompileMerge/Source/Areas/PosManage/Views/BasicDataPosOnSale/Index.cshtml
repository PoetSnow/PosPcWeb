@using Gemstar.BSPMS.Common.Tools;
@using Gemstar.BSPMS.Hotel.Web.Models;

<style type="text/css">
    body {
        overflow-y: hidden;
    }
</style>
@{
    ViewBag.Title = "Pos特价菜";

    var queryModel = ViewBag.commonQueryModel as CommonQueryModel;
    var gridId = queryModel == null ? "grid" : queryModel.GridControlId;
    var keyColumnName = "id";
    var colsDefault = new List<GridColumnSetting>
{
new GridColumnSetting {Name = "itemName", Title = "项目名称", Hidden = false,Order = 1, Width = 0},
new GridColumnSetting {Name = "unitName", Title = "单位名称", Hidden = false,Order = 2, Width = 0},
new GridColumnSetting {Name = "price", Title = "价格", Hidden = false, Order = 3, Width = 0},
new GridColumnSetting {Name = "refeName", Title = "营业点", Hidden = false, Order = 4, Width = 0},
new GridColumnSetting {Name = "customerTypeName", Title = "客人类型", Hidden = false, Order = 5, Width = 0},
new GridColumnSetting {Name = "tabTypeName", Title = "餐台类型", Hidden = false, Order = 6, Width = 0},
new GridColumnSetting {Name = "iTagperiodName", Title = "日期类型", Hidden = false, Order = 7, Width = 0},
new GridColumnSetting {Name = "StartTime", Title = "开始时间", Hidden = false,Order = 8, Width = 0},
new GridColumnSetting {Name = "EndTime", Title = "结束时间", Hidden = false,Order = 9, Width = 0},

new GridColumnSetting {Name = "discount", Title = "折扣率", Hidden = false,Order = 10, Width = 0},
new GridColumnSetting {Name = "isLimitText", Title = "是否最低消费", Hidden = false,Order = 11, Width = 0},
new GridColumnSetting {Name = "isServiceText", Title = "是否计服务费", Hidden = false,Order = 12, Width = 0},
new GridColumnSetting {Name = "isDiscountText", Title = "是否打折", Hidden = false,Order = 13, Width = 0},
new GridColumnSetting {Name = "iCmpTypeText", Title = "计算类型", Hidden = false,Order = 14, Width = 0},
new GridColumnSetting {Name = "isUsedText", Title = "是否启用", Hidden = false,Order = 15, Width = 0},
new GridColumnSetting {Name = "ModifiedDateStra", Title = "修改时间", Hidden = false,Order = 16, Width = 0}

};
    var gridViewModel = new KendoGridCustomDataRowViewModel
    {
        GridControlId = gridId,
        KeyColumnName = keyColumnName,
        StatusColumnName = "",
        EnableFunctionForEnable = false,
        EnableFunctionForDisable = false,
        EnableScrollable = true,
        Area = "PosManage",
        Controller = "BasicDataPosOnSale",
        Action = "Index",
        DefaultColumnSettings = colsDefault,
        CustomToolbar = c =>
        {

            c.Custom().Text("批量操作").HtmlAttributes(new { onclick = "BatchHandle()",href= "javascript:void(0);" });

            c.Custom().Name("comfirmtextone").Text("双击可修改").HtmlAttributes(new { id = "comfirmtextone", href = "javascript:void(0);", style = "color:red;margin-top:9px;margin-left:10px;cursor:default;" });
        }
    };

    }

    @Html.Partial("_KendoGridCustomDataRowView", gridViewModel)

@section scripts{
        @Html.Partial("_KendoGridEvents", gridViewModel)
    @Html.Partial("_KendoGridEditInWindow", gridViewModel)
}
<script type="text/javascript">
    $(function () {
        window.onresize = onResize; onResize();
        $("#comfirmtext").removeClass("k-button");
        $("#comfirmtextone").removeClass("k-button");
        top.posonsalegrid = $("#grid").data("kendoGrid");
    });
    function gridread() {
        $("#grid").data("kendoGrid").dataSource.read();
    }
    function onResize() {
        var allHeight = $("#mainContent", window.top.document).height();
        var showHeight = $("#grid .k-grid-toolbar").height() + 20 + 30 + 145;
        $("#grid .k-grid-content").height(allHeight - showHeight);
    }

    function BatchHandle() {
        top.openKendoWindow("批量操作", '@Url.Action("BatchHandle", "BasicDataPosOnSale")');
    }

</script>