@model List<Gemstar.BSPMS.Hotel.Services.EntitiesPosProcedures.up_pos_list_suitItemByRefeidResult>
<ul>
    @{
        if (Model != null && Model.Count > 0)
        {
            foreach (var item in Model)
            {
                if (item.isSuite == true || item.isFeast == true || item.isUserDefined == true)
                {
                    <li class="content-list-detail">
                        <a href="javascript:void(0)" onclick="isSuite(this)" data-id="@item.Id" data-code="@item.Code" data-name="@item.Cname" data-isDiscount="@item.isDiscount" data-isService="@item.isService" data-sellStatus="@item.sellStatus" data-isHandWrite="@item.isHandWrite" data-isInput="@item.isInput" data-isSuite="@item.isSuite" data-isFeast="@item.isFeast" data-isUserDefined="@item.isUserDefined" data-isCurrent="@item.isCurrent">
                            <span style="display:@(item.isshowcode == null || item.isshowcode.Value == false ? "none" : "");">@item.Code</span>
                            <span>@item.Cname</span>
                            <span style="display:@(item.isshowprice == null || item.isshowprice.Value == false ? "none" : "");">@(Convert.ToDecimal(item.Price == null ? 0 : item.Price).ToString("C"))</span>
                            <span><i class="fa fa-check"></i></span>
                        </a>
                    </li>
                }
            }

            <li class="content-list-paging">
                <a href="javascript:void(0)" onclick="getListPage(this,'1','@(Url.Action("_SuitItemList", "PosInSingle"))','@(Url.Action("GetItemTotal", "PosInSingle"))')">上一页</a>
                <a href="javascript:void(0)" onclick="getListPage(this,'2','@(Url.Action("_SuitItemList","PosInSingle"))','@(Url.Action("GetItemTotal","PosInSingle"))')">下一页</a>
            </li>
        }
        <li class="content-list-return"><a href="javascript:void(0)" onclick="returnParent()"><img src="~/Images/posInSingle/fanh.png" /><br />返回</a></li>
    }
</ul>