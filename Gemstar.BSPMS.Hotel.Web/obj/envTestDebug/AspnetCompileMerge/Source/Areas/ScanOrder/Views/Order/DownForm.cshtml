<div class="container">
    <!-- 点菜列表 -->
    <ul class="remark mui-table-view">

        <li class="mui-table-view-cell mui-media">
            <div class="mui-input-row">
                <label>金额</label>
                <input type="number" id="totalPrice" readonly>
            </div>
            <div class="mui-input-row" style="display:none">
                <label>备注</label>
