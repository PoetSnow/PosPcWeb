                <td>@Html.ValidationMessageFor(m => m.MaxCount, "*")</td>
            </tr>
            <tr>
                <td class="textright">@Html.LabelFor(m => m.IsAdd)</td>
                <td>
                    @Html.Kendo().DropDownListFor(e => e.IsAdd).HtmlAttributes(new { style = " width:100%" }).DataTextField("Text").DataValueField("Value").DataSource(e => { e.Read(r => r.Action("GetIsSelectList", "RoomTypeManage", new { rnd = new Random().NextDouble() })); })
                </td>
                <td>@Html.ValidationMessageFor(m => m.IsAdd, "*")</td>
                <td class="textright">@Html.LabelFor(m => m.IsNotRoom)</td>
                <td>
