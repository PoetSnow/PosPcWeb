            </tr>
            <tr>
                <td class="textright">@Html.LabelFor(m => m.ChanelValid)</td>
                <td>
                    @Html.Kendo().DropDownListFor(e => e.ChanelValid).HtmlAttributes(new { style = " width:100%" }).DataTextField("Text").DataValueField("Value").DataSource(e => { e.Read(r => r.Action("GetIsSelectList", "RoomTypeManage", new { rnd = new Random().NextDouble() })); })
                </td>
                <td>@Html.ValidationMessageFor(m => m.ChanelValid, "*")</td>
                <td class="textright">@Html.LabelFor(m => m.IsClose)</td>
                <td>
                    @Html.Kendo().DropDownListFor(e => e.IsClose).HtmlAttributes(new { style = " width:100%" }).DataTextField("Text").DataValueField("Value").DataSource(e => { e.Read(r => r.Action("GetIsSelectList", "RoomTypeManage", new { rnd = new Random().NextDouble() })); })
                </td>
                <td>@Html.ValidationMessageFor(m => m.IsClose, "*")</td>
            </tr>
            <tr>
                <td class="textright">@Html.LabelFor(m => m.OverQauntity)</td>
                <td>@Html.TextBoxFor(m => m.OverQauntity, new { @class = "k-textbox", style = "width:100%;" })</td>
                <td>@Html.ValidationMessageFor(m => m.OverQauntity, "*")</td>
                <td class="textright">@Html.LabelFor(m => m.Seqid)</td>
                <td>@Html.TextBoxFor(m => m.Seqid, new { @class = "k-textbox", style = "width:100%;" })</td>
                <td>@Html.ValidationMessageFor(m => m.Seqid, "*")</td>
            </tr>
            <tr>
                <td class="textright">@Html.LabelFor(m => m.Cdescribe)</td>
                <td colspan="4">@Html.TextAreaFor(m => m.Cdescribe, new { @class = "k-textbox", style = "width:100%;height:50px;" })</td>
                <td>@Html.ValidationMessageFor(m => m.Cdescribe, "*")</td>
            </tr>

            @Html.Partial("_QiniuPictureUploadmulti")

            @foreach (var roompara in ViewBag.roomtypepara)
{
                <tr>

                    <td class="textright">@roompara.ParaName</td>
                    @if (roompara.ParaCode == "rt1")
{
                        <td>@Html.TextBoxFor(m => m.Rt1, new { @class = "k-textbox", style = "width:100%;" })</td>
                        <td>@Html.ValidationMessageFor(m => m.Rt1, "*")</td>
                    }
                    else if (roompara.ParaCode == "rt2")
                    {
                        <td>@Html.TextBoxFor(m => m.Rt2, new { @class = "k-textbox", style = "width:100%;" })</td>
                        <td>@Html.ValidationMessageFor(m => m.Rt2, "*")</td>
                    }
                    else if (roompara.ParaCode == "rt3")
                    {
                        <td>@Html.TextBoxFor(m => m.Rt3, new { @class = "k-textbox", style = "width:100%;" })</td>
                        <td>@Html.ValidationMessageFor(m => m.Rt3, "*")</td>
