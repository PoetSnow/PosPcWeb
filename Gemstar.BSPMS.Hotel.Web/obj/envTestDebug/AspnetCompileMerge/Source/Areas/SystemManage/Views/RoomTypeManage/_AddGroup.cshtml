                    else if (roompara.ParaCode == "rt4")
                    {
                        <td>@Html.TextBoxFor(m => m.Rt4, new { @class = "k-textbox", style = "width:100%;" })</td>
                        <td>@Html.ValidationMessageFor(m => m.Rt4, "*")</td>
                    }
                    else if (roompara.ParaCode == "rt5")
                    {
                        <td>@Html.TextBoxFor(m => m.Rt5, new { @class = "k-textbox", style = "width:100%;" })</td>
                        <td>@Html.ValidationMessageFor(m => m.Rt5, "*")</td>
                    }
                    else if (roompara.ParaCode == "rt6")
                    {
                        <td>@Html.TextBoxFor(m => m.Rt6, new { @class = "k-textbox", style = "width:100%;" })</td>
                        <td>@Html.ValidationMessageFor(m => m.Rt6, "*")</td>
                    }
                    else if (roompara.ParaCode == "rt7")
                    {
                        <td>@Html.TextBoxFor(m => m.Rt7, new { @class = "k-textbox", style = "width:100%;" })</td>
                        <td>@Html.ValidationMessageFor(m => m.Rt7, "*")</td>
                    }
                    else if (roompara.ParaCode == "rt8")
                    {
                        <td>@Html.TextBoxFor(m => m.Rt8, new { @class = "k-textbox", style = "width:100%;" })</td>
                        <td>@Html.ValidationMessageFor(m => m.Rt8, "*")</td>
                    }
                    @if (roompara.dataType == "percent")
{
                        <td>
                            <label>%</label>
                        </td>
                    }
                </tr>
            }
            <tr>
                <td class="textright">@Html.LabelFor(m => m.DataControlName)</td>
                <td>@Html.TextBoxFor(m => m.DataControlName, new { @class = "k-textbox", style = "width:100%;", @readonly = "readonly" })</td>
                <td>@Html.ValidationMessageFor(m => m.DataControlName, "*")</td>
                <td class="textright">@Html.LabelFor(m => m.SelectedResortHids)</td>
                <td>@Html.DropDownListFor(m => m.SelectedResortHids, Model.ResortItems, new { @class = "box", multiple = "multiple", style = "width:100%;height:200px;" })</td>
                <td>@Html.ValidationMessageFor(m => m.SelectedResortHids, "*")</td>
            </tr>
        </table>
        @Html.HiddenFor(m => m.DataControlCode)
    </div>
    @Html.ValidationSummary()
    <div class="formButtons">
        <button class="k-primary k-button" id="saveEditFormButton" role="button" data-role="button">保存</button>&nbsp;&nbsp;
        <button class="k-primary k-button" id="closeEditFormButton" role="button" data-role="button">返回</button>
    </div>
}
<script type="text/javascript">
    $(function () {
        $.validator.unobtrusive.parse(document);
        var controlType = "@Model.DataControlCode";
        if (controlType != "@Gemstar.BSPMS.Common.Services.BasicDataControls.DataControlType.SelectedResorts.Code") {
            $("#SelectedResortHids").attr("disabled", "disabled");
        }
        $("#saveEditFormButton").click(function (e) {
        e.preventDefault();
        Savadelimg();
        saveFormData($("#saveEditFormButton"));
    });
        $("#closeEditFormButton").click(function (e) {
        e.preventDefault();
        closeEditFormWindow();
    });
});
</script>