        //双击查看详情
        function editGridItem(row) {
            var grid = $("#grid").data("kendoGrid");
            var data = grid.dataItem($(row));
            var url = "@Url.Action("Detail")" + "?id=" + data.id;
            top.openKendoWindow("提醒详情", url, null);
