@model Gemstar.BSPMS.Hotel.Web.Models.Home.SelectShiftViewModel
@{
    Layout = "~/Views/Shared/_LayoutAccount.cshtml";
    var product = ViewBag.product as Gemstar.BSPMS.Common.Services.Entities.M_v_products;
